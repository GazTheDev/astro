---
const {} = Astro.props;
---

<div
  class="px-4 py-8 md:py-16 sm:px-6 mx-auto md:px-24 lg:px-8 lg:py-20 max-w-6xl"
>
  <div class="grid grid-cols-2 row-gap-8 md:grid-cols-4">
    <div class="text-center md:border-r mb-10 md:mb-0">
      <div class="text-4xl font-bold lg:text-5xl xl:text-6xl">100K</div>
      <p
        class="text-sm font-medium tracking-widest text-gray-800 dark:text-slate-400 uppercase lg:text-base"
      >
        Page Views
      </p>
    </div>
    <div class="text-center md:border-r mb-10 md:mb-0">
      <div class="text-4xl font-bold lg:text-5xl xl:text-6xl">24</div>
      <p
        class="text-sm font-medium tracking-widest text-gray-800 dark:text-slate-400 uppercase lg:text-base"
      >
        Websites Created
      </p>
    </div>
    <div class="text-center md:border-r">
      <div class="text-4xl font-bold lg:text-5xl xl:text-6xl">7</div>
      <p
        class="text-sm font-medium tracking-widest text-gray-800 dark:text-slate-400 uppercase lg:text-base"
      >
        Years expierence
      </p>
    </div>
    <div class="text-center">
      <div class="text-4xl font-bold lg:text-5xl xl:text-6xl">20</div>
      <p
        class="text-sm font-medium tracking-widest text-gray-800 dark:text-slate-400 uppercase lg:text-base"
      >
        Ongoing clients
      </p>
    </div>
  </div>
</div>
